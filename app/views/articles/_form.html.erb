<%= form_for(@article, html: {multipart: true}) do |f| %>
	<ul>
		<% @article.errors.full_messages.each do |error| %>
			<li> <%= error %> </li>
		<% end %>
	</ul>
	
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>

	<p>
		<%= f.label :tag_list %>
		<%= f.text_field :tag_list %>
	</p>

	<p>
		<% if @article.image.exists? %>
			<p><%= @article.image_file_name %> is currently attached</p><br>
		<% end %>
		<%= f.label :image, 'Attach your image' %>
		<%= f.file_field :image %>
	</p>

<% end %>
